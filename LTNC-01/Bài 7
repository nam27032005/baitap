#include<bits/stdc++.h>
using namespace std;


int main() {
    int n;
    cin >> n;
    int a[n];
    for (int i=0;i<n;i++) {
        cin >> a[i];
    }
    double d=0,b=0,c=0;
    for (int i=0;i<n;i++) {
        if (a[i]>0) d++;
        else if (a[i]<0) b++;
        else c++;
    }
    double x=d/n,y=b/n,z=c/n;
    cout << fixed << setprecision(6) << x << endl;
    cout << fixed << setprecision(6) << y << endl;
    cout << fixed << setprecision(6) << z << endl;
}
